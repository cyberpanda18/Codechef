#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--)
	{
		int n,k;
		cin>>n>>k;
		int arr[n];
		long int sum=0,sum1=0;
		for(int i=0;i<n;i++)
	{ cin>>arr[i];
	sum1=sum1+arr[i];}
		for(int i=0;i<n;i++)
		{
			if(arr[i]>k)
			arr[i]=k;
		}
		for(int i=0;i<n;i++)
		sum=sum+arr[i];
		cout<<sum1-sum<<endl;
		
	}
	return 0;
}
